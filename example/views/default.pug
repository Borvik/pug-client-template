doctype html
html
  head
    title Pug Client Templates
  body
    #otherResult(data-test=objTest)
    #templateResult
    pugtemplate(name='quickTmp')
      .does
        .this
          .work OK - #{testVar}
          include included
    pugtemplate(name='template2')
      .second done
    #result2
    #finalResult
    pugtemplate(name='quickTmp',data=objTest)
    pugtemplate(name='quickTmp',data={testVar: 'inline'})
    - var codeObj = {testVar: 'fromCode'}
    pugtemplate(name='quickTmp',data=codeObj)
    pugruntime
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script.
      $(function() {
        $('#otherResult').text('jQuery is running');
        $('#templateResult').html(templates.quickTmp({testVar: 'Working'}));
        $('#result2').html(templates.template2());
      });